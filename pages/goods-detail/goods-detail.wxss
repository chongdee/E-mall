/* pages/goods-detail/goods-detail.wxss */
page {
  padding-bottom: 90rpx;
}
.goods-detail-box swiper {
  height: 66vw;
  text-align: center;
}
.goods-detail-box swiper image {
  width: 60%;
}
.goods-info-box .goods-price {
  padding: 15rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--themeColor);
}
.goods-info-box .goods-desc-box {
  display: flex;
}
.goods-info-box .goods-desc-box .goods-name {
  flex: 5;
  color: #000;
  font-size: 28rpx;
  padding: 10rpx;
  display: -webkit-box;
  overflow: hidden;
  -moz-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods-info-box .goods-desc-box .favorite-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 2rpx solid #bbb;
}
.info-detail-box .info-detail-title {
  font-size: 32rpx;
  color: var(--themeColor);
  font-weight: 600;
  padding: 20rpx;
}
.btm-tool {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #ccc;
}
.btm-tool .tool-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  position: relative;
}
.btm-tool .tool-item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.btm-tool .tool-item navigator {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}
.btm-tool .btn-cart {
  flex: 2;
  background-color: orange;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}
.btm-tool .btn-buy {
  flex: 2;
  background-color: var(--themeColor);
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}
