page {
  padding-bottom: 90rpx;
}
.receive-addr-box .user-info-box {
  display: flex;
  padding: 20rpx;
}
.receive-addr-box .user-info-box .user-info {
  flex: 5;
}
.receive-addr-box .user-info-box .user-phone {
  flex: 3;
  text-align: right;
}
.cart-box .cart-title {
  padding: 20rpx;
  font-size: 36rpx;
  color: var(--themeColor);
  border-top: 1rpx solid currentColor;
  border-bottom: 1rpx solid currentColor;
}
.cart-box .cart-content .cart-item {
  display: flex;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
}
.cart-box .cart-content .cart-item .cart-img-box {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart-box .cart-content .cart-item .cart-img-box image {
  width: 80%;
}
.cart-box .cart-content .cart-item .cart-info-box {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart-box .cart-content .cart-item .cart-info-box .goods-name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.cart-box .cart-content .cart-item .cart-info-box .goods-price-box {
  display: flex;
  justify-content: space-between;
}
.cart-box .cart-content .cart-item .cart-info-box .goods-price-box .goods-price {
  color: var(--themeColor);
  font-size: 34rpx;
}
.cart-box .cart-content .cart-item .cart-info-box .goods-price-box .num-tool-box {
  display: flex;
}
.cart-box .cart-content .cart-item .cart-info-box .goods-price-box .num-tool-box .goods-num {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer-tool {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  border-top: 1rpx solid #ccc;
}
.footer-tool .total-price-box {
  flex: 5;
  padding-right: 15rpx;
  text-align: right;
}
.footer-tool .total-price-box .total-price .total-price-text {
  color: var(--themeColor);
  font-size: 34rpx;
  font-weight: 600;
}
.footer-tool .order-pay-box {
  flex: 3;
  background-color: var(--themeColor);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
}
