page {
  background-color: #f3f4f6;
  padding: 20rpx;
}
.search-box {
  height: 60rpx;
  display: flex;
}
.search-box input {
  flex: 1;
  height: 100%;
  padding-left: 20rpx;
  background-color: #fff;
}
.search-box button:not([size='mini']) {
  width: 110rpx;
  height: 100%;
  font-size: 26rpx;
  padding: 0;
  font-weight: normal;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 10rpx;
  background-color: #fff;
}
.search-content {
  margin-top: 30rpx;
}
.search-content .search-item {
  background-color: #fff;
  font-size: 26rpx;
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
