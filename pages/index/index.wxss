.swiper-box {
  overflow: hidden;
}
.swiper-box .swiper {
  height: 340rpx;
}
.swiper-box .swiper-item image {
  width: 100%;
}
.cate-box {
  display: flex;
  flex-wrap: nowrap;
  padding: 20rpx;
}
.cate-box navigator {
  flex: 1;
}
.cate-box navigator image {
  width: 100%;
}
.floor-box .floor-item .floor-title {
  margin-top: 18rpx;
}
.floor-box .floor-item .floor-title image {
  width: 100%;
}
.floor-box .floor-item .floor-content {
  overflow: hidden;
}
.floor-box .floor-item .floor-content navigator {
  float: left;
  width: 33.33%;
  height: 100%;
}
.floor-box .floor-item .floor-content navigator:nth-last-child(-n+4) {
  height: 27.72711207vw;
  border-left: 10rpx solid #fff;
}
.floor-box .floor-item .floor-content navigator:nth-child(2),
.floor-box .floor-item .floor-content navigator:nth-child(3) {
  border-bottom: 10rpx solid #fff;
}
.floor-box .floor-item .floor-content navigator image {
  width: 100%;
  height: 100%;
}
